@import "nib"
@import "utils/reset"
@import "utils/functions"
@import "utils/mixins"

// Variables -----------------------------------------------------------------
$bgColor = #3b3c3f
$heliomColor = #5d53fc

// Base ----------------------------------------------------------------------
* { box-sizing: border-box }

html
  font-size: 62.5%
  height: 100%

body
  position: relative
  height: 100%
  font-size: 22
  background-color: $bgColor
  background-image: linear-gradient(top, lighten($bgColor, 10%) 0em, $bgColor 10em)

body, legend, input, textarea, button
  font-family: 'Proxima Nova Condensed', Helvetica, Arial, sans-serif
  line-height: 1.4
  color: #fff

a { color: #fff }
a:focus, a:hover { color: #fff }

h1 { margin: 0 }

// Header --------------------------------------------------------------------
header
  padding: 3% 4% 3%
  @extend .clear

  h1
    float: left
    margin: 2% 0 0
    font-size: 36

    i
      color: darken(#fff, 40%)
      font-weight: normal
      font-style: normal

  #logo
    a, img { display: block }
    a
      float: right
      width: 80px
  img { width: 100% }

// Layout --------------------------------------------------------------------
#content
  margin: 0 auto

// Nav -----------------------------------------------------------------------
nav
  box-shadow: 0px 0 5px 2px rgba(#000, .05)
  background-color: darken($bgColor, 20%)

  ul
    margin: 0
    list-style-type: none

  li
    display: block
    border-bottom: 1px solid rgba(#000, .2)

  a
    display: block
    padding: .75em 3.8%
    border-top: 1px solid rgba(#fff, .03)
    border-left: 3px solid transparent
    background-color: rgba(#fff, .02)
    transition-property: background-color, border
    transition-duration: .15s
    transition-timing-function: ease-out

    &:hover
      border-left-color: $heliomColor !important
      background-color: rgba(#fff, .05)

  li:nth-child(1n) a { border-left-color: lighten($bgColor, 10%) }
  li:nth-child(2n) a { border-left-color: lighten($bgColor, 20%) }

  span
    display: inline-block
    vertical-align: middle

  span.label
    margin: 0 .1em 0 0
    &:after { content: ' â€”'; color: darken(#fff, 70%) }

  span.tags
    position: relative
    top: 1px
    font-size: 18
    color: #66696c
    font-weight: 300

// Views ---------------------------------------------------------------------
@import "views/index"

// Labs ----------------------------------------------------------------------
#meta
  position: absolute
  bottom: 0; left: 0
  font-size: 14
  color: #888
  padding: 3% 4%

  a:hover { color: $heliomColor }

.content-box
  border-radius: 9px
  box-shadow: 0 0 5px rgba(#000, .5)

@import "labs/ios_folders"
@import "labs/skeleton"

// Media queries -------------------------------------------------------------
@media (max-width: 680px)
  header, .index header
    padding: 7.5% 10% 7.5%

  #content, .index #content
    margin: 0
    padding: 0

  .content-box
    position: relative !important
    top: 0; left: 0 !important
    margin: 0 auto !important

  #meta
    position: relative
    padding: 4% 2%
