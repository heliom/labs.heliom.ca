<!DOCTYPE html>
<html lang="en" class="no-js">
  <head>
    <meta charset="utf-8">
    <title><%= "#{@title} | " if @title %>Heliom ‚ÅÇ Labs</title>
    <meta name="viewport" content="width=device-width,minimum-scale=1,maximum-scale=1">
    <%= stylesheet_include_tag 'styles' %>
    <%= javascript_include_tag 'heliom' %>

    <script src="//use.typekit.net/lct5udq.js"></script>
    <script>try{Typekit.load();}catch(e){}</script>
  </head>
  <body class="<%= @view_class %>">
    <meta name="velcro:bodyClass" content="<%= @view_class %>">

    <header id="header">
      <nav>
        <span class="icon-list"><i></i><i></i><i></i></span>
        <a href="/" data-velcro-push="#content">
          <h1><span>heliom</span>labs</h1>
        </a>
        <ul>
          <li><a href="http://heliom.ca"><span>heliom</span></a></li>
          <li><a href="http://heliom.ca/blog"><span>heliom</span>blog</a></li>
        </ul>
      </nav>
      <a id="logo" href="/" data-velcro-push="#content"><img src="/images/heliom-logo.png" alt="Heliom" width="100"></a>
    </header>

    <div id="content">
      <%= yield %>
    </div>

    <script>document.write('<script src="//cdnjs.cloudflare.com/ajax/libs/' +
      ('__proto__' in {} && !/firefox\/3/i.test(navigator.userAgent) ?
      'zepto/1.0rc1/zepto.min.js' : 'jquery/1.8.2/jquery.min.js') + '"><\/script>')</script>
    <%= javascript_include_tag 'scripts' %>

    <script>
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-31026266-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
  </body>
</html>
